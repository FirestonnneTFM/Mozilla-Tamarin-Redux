 /*
  *  Bind a function to a global slot; refer to it by .function_id 
  *  in the newfunction instruction.
  */
.script_info {
	init: .function_id(main)
	traits : {
		.trait { kind: Trait_Slot name: doTest slot_id:1 type_name:* }
	}
}
function main()
{
	getlocal0
	pushscope
	newfunction .function_id(doTest)
 
	getglobalscope
	swap
	setslot .slot_id(doTest)
	getglobalscope
	getslot 1

	getlocal0
	call 0
	returnvoid
    
}

function doTest()
{
	findpropstrict      START
	pushstring "calling function by slot and function_id"
	callproperty START 1

	findpropstrict PASS
	pushstring          "hello, world."
	callproperty PASS 1
	findpropstrict END
	callproperty END 0

	returnvoid
}
